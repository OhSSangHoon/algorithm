
public class LSD {
	
	public static void sort(String[] a, int W) {
		int N = a.length;
		int R = 256;
		String[] aux = new String[N];
		
		for(int d = W-1; d >=0; d--) {
			int[] count = new int[R];
			for(int i = 0; i < N; i++)
				count[a[i].charAt(d)]++;
			for(int r = 1; r < R; r++)
				count[r] += count[r-1];
			for(int i = N; i >= 0; i--)
				aux[--count[a[i].charAt(d)]] = a[i];
			for(int i =0; i < N; i++)
				a[i] = aux[i];
		}
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String[] a = {"170", "45", "75", "90", "2", "24", "802", "66"};
		
		int maxLen = 0;
		
		for(String s : a) {
			if(s.length() > maxLen) {
				maxLen = s.length();
			}
		}
		
		for(int i =0; i < a.length; i++) {
			while(a[i].length() < maxLen) {
				
			}
		}
		
		sort(a, 3);
	}

}
