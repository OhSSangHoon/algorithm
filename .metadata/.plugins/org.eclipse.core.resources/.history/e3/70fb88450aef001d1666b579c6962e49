public class variableLSD {

    public static void sort(String[] a) { //모든 문자의 길이 W
        int N = a.length; //배열 길이
        int R = 256; //기수 = R()
        String[] aux = new String[N];
        int maxLen = 0;

        for (int d = maxLen - 1; d >= 0; d--) { //뒤에서부터
            int[] count = new int[R + 2];
            
            for (int i = 0; i < N; i++)
            	int charAt = d < a[i].length() ? a[i].charAt(d) + 1 : 0
            
            for (int r = 1; r < R; r++)
                count[r + 1] += count[r];
            
            for (int i = N - 1; i >= 0; i--) //뒤 문자열부터 뒤에서 저장
                aux[--count[a[i].charAt(d)]] = a[i];
           
            for (int i = 0; i < N; i++)
                a[i] = aux[i];
        }
    }

    public static void main(String[] args) {
        String[] a = {"car", "bar", "bat", "cat", "cab", "rat", "tab", "bag"};

        sort(a);

        // 정렬된 배열 출력
        for (String s : a) {
            System.out.print(s + " ");
        }
    }
}
