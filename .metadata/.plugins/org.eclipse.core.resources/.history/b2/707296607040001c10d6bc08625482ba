package exam;
import java.util.*;

public class HashMapEx {

	//(영,한) 단어를 쌍으로  해시맵에 저장하고 영어로 한글을 검색하는 프로그램을 작성하라.
	//exit이 입력되면 프로그램을 종료한다.
	public static void main(String[] args) {
		//영,한 단어의 쌍을 저장한는 HashMap 컬렉션 생성
		HashMap<String,String> dic = new HashMap<String, String>();
		
		dic.put("bady", "아기");
		dic.put("love", "사랑");
		dic.put("apple", "사과");
		
		//영단어를 입력받고 한글 단어 검색. "exit"를 입력받으면 종료
		Scanner sc = new Scanner(System.in);
		while(true) {
			
			
		}
	}

}
